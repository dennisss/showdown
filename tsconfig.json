{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2017",
		"lib": [
			"es2017", "dom"
		],
		"noImplicitAny": true,
		"strict": true,
		"esModuleInterop": true,
		"outDir": "./build/",
		"importHelpers": true,
		"declaration": true,
		"noEmitOnError": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
